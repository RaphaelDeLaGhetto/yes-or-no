<%= partial(:errors, {locals: {obj: @post} }) if @post %>
<% if logged_in? %>
  <% form_tag url_for(:post, :create), :id => 'post-form', :method => 'post' do %>
    <%= label_tag(:url, :caption => 'Image URL') %>
    <%= url_field_tag(:url, :id => 'url') %>
    <%= label_tag(:tag, :caption => 'Tag') %>
    <%= text_field_tag(:tag, :id => 'tag', :maxlength => 75) %>
    <%= submit_tag('Add Image') %>
  <% end %>
<% end %>
 
<% @posts.each do |post| %>
  <% if @agent %>
    <%= partial('post/post', {locals: {post: post, can_vote: @agent.can_vote?(post)}}) %>
  <% else %>
    <%= partial('post/post', {locals: {post: post, can_vote: @can_vote}}) %>
  <% end %>
<% end %>

<%= will_paginate @posts, :page_links => false %>
