<% if @agent == @post.agent %>
  <% form_tag("/post/#{@post.id}", class: 'delete', method: 'delete', :confirm => "This post cannot be retrieved! Are you sure?") do %>
    <input type="submit" value="&#9249;">
  <% end %>
<% end %>
<%= partial('post/post', {locals: {post: @post, can_vote: @agent.can_vote?(@post)}}) %>
<% if ENV['AD_SPACING'] && ENV['AD_SPACING'].to_i > 0 %>
  <%= partial('ad') %>
<% end %>
