<% if logged_in? %>
  <% form_tag url_for(:post, :create), :id => 'post-form', :method => 'post' do %>
    <% field_set_tag(:class => 'form-group') do %>
      <%= label_tag(:url, :caption => 'Image URL') %>
      <%= url_field_tag(:url, :id => 'url') %>
    <% end %>
    <% field_set_tag(:class => 'form-group') do %>
      <%= label_tag(:tag, :caption => 'Tag') %>
      <div id="tags">
        <%= text_field_tag(:tag, :id => 'tag',  :placeholder => "Add a tag", :maxlength => 256) %>
      </div>
    <% end %>
    <!--
    <div id="tags">
      <span>php</span>
      <span>c++</span>
      <span>jquery</span>
      <input type="text" value="" placeholder="Add a tag" />
    </div>
    -->
    <% field_set_tag(:class => 'form-group') do %>
      <%= submit_tag('Add Image') %>
    <% end %>
  <% end %>
<% end %>
 
