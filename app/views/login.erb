<%= partial(:errors, {locals: {obj: @agent}}) %>
<h2>New and returning guests</h2>
<div class='form-wrapper'>
  <% form_tag '/login', :method => 'post' do %>
    <% field_set_tag(:class => 'form-group') do %>
      <%= label_tag(:email) %>
      <%= email_field_tag(:email, :id => 'email', :value => @agent.email, :required => true, :autofocus => true) %>
      <%= error_message_on @agent, :email, :class => "text-error", :prepend => "The email" %>
    <% end %>
    <% field_set_tag(:class => 'form-group') do %>
      <%= submit_tag('Next', :id => 'next-button') %>
    <% end %>
  <% end %>
</div>
