<%= partial(:errors, {locals: {obj: @post} }) if @post %>
<% if @show_form %>
  <%= partial('post/form') %>
<% end %>

<% if @posts.empty? %>
  <h1>You haven't answered yet</h1>
<% else %>
  <% @posts.each do |post| %>
    <%= partial('post/post', {locals: {post: post, can_vote: false}}) %>
  <% end %>
<% end %>

<%= will_paginate @posts, :page_links => false %>
