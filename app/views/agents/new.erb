<h1>Account Registration and Retrieval</h1>
<h2>Enter a valid email to set password</h2>
<% form_for(@agent, '/agents/create') do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= error_message_on @agent, :email, :class => "text-error", :prepend => "That email" %>
  <p>
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </p>
<% end %>
